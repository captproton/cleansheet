<h1>Listing documents</h1>

<table>
  <tr>
    <th>Email body</th>
    <th>Email from</th>
    <th>Email sent at</th>
    <th>Csv</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.email_body %></td>
    <td><%= document.email_from %></td>
    <td><%= document.email_sent_at %></td>
    <td><%= document.csv %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

